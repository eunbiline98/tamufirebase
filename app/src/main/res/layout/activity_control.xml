<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".controlActivity">
        <Button
            android:id="@+id/btnTutup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="42dp"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:onClick="tutupData"
            android:background="@drawable/button_default"
            android:textColor="#fff"
            android:text="Kunci Pintu" />

        <Button
            android:id="@+id/btnBuka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="42dp"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:onClick="bukaData"
            android:background="@drawable/button_default"
            android:textColor="#fff"
            android:text="Buka Pintu" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginTop="20dp"
            android:text="Keadaan Pintu : "
            android:textAlignment="center"
            android:textSize="22sp"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/keadaan_pintu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal"
            android:text="-"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:ignore="InvalidId" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginTop="20dp"
            android:text="Batas Akses : "
            android:textAlignment="center"
            android:textSize="22sp"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/waktu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal"
            android:text="-"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:ignore="InvalidId" />


    </LinearLayout>
</ScrollView>
